<Window x:Class="Bazy_Danych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bazy_Danych"
        mc:Ignorable="d"
        Title="Zaloguj" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
        
        <Label Margin="0, 5">Login: </Label>
        <TextBox Name="userLogin" Padding="5"></TextBox>
        
        <Label Margin="0, 5">Hasło:</Label>
        <PasswordBox Name="userPassword" Padding="5"></PasswordBox>

        <Button Click="ZalogujBtn_Click" Margin="0, 10" Padding="5" IsDefault="True">Zaloguj</Button>

        <Label Name="Wynik" Visibility="Collapsed" Foreground="Red"></Label>
    </StackPanel>
</Window>
